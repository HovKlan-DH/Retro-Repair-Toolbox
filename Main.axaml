<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RRT"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="RRT.Main"
        Title="Retro Repair Toolbox"
        MinWidth="800"
        MinHeight="500">

    <Window.Styles>

        <!-- Base tab font size and reduced vertical padding -->
        <Style Selector="TabItem">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Padding" Value="12,4" />
        </Style>

        <!-- Hover: tint the header text -->
        <Style Selector="TabItem:pointerover">
            <Setter Property="Foreground" Value="{DynamicResource AppThemeAccentBrush}" />
        </Style>

        <!-- Hover: show a faint underline indicator -->
        <Style Selector="TabItem:pointerover /template/ Border#PART_SelectedPipe">
            <Setter Property="IsVisible" Value="True" />
            <Setter Property="Background" Value="{DynamicResource AppThemeAccentLightBrush}" />
        </Style>

        <!-- Selected: solid underline indicator -->
        <Style Selector="TabItem:selected /template/ Border#PART_SelectedPipe">
            <Setter Property="Background" Value="{DynamicResource AppThemeAccentBrush}" />
        </Style>

        <!-- Banner install button: explicit hover/pressed backgrounds -->
        <Style Selector="Button.BannerInstallButton /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource AppThemeAccentBrush}" />
        </Style>
        <Style Selector="Button.BannerInstallButton:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource AppThemeAccentHoverBrush}" />
        </Style>
        <Style Selector="Button.BannerInstallButton:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource AppThemeAccentPressedBrush}" />
        </Style>

        <!-- Banner dismiss button: subtle hover on dark background -->
        <Style Selector="Button.BannerDismissButton /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>
        <Style Selector="Button.BannerDismissButton:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource AppThemeBannerDismissHoverBrush}" />
        </Style>
        <Style Selector="Button.BannerDismissButton:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource AppThemeBannerDismissPressedBrush}" />
        </Style>

        <!-- Region toggle buttons -->
        <Style Selector="Button.RegionToggle.active">
            <Setter Property="BorderBrush" Value="IndianRed" />
            <Setter Property="BorderThickness" Value="2" />
        </Style>

        <Style Selector="Button.RegionToggle.active /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource AppThemeAccentBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource AppThemeAccentBrush}" />
        </Style>

        <Style Selector="Button.RegionToggle.active">
            <Setter Property="Foreground" Value="White" />
        </Style>

    </Window.Styles>

    <Grid x:Name="RootGrid">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="200" MinWidth="80" />
        <ColumnDefinition Width="4" />
        <ColumnDefinition Width="*" MinWidth="100" />
    </Grid.ColumnDefinitions>

    <!-- Left Panel -->
    <Border x:Name="LeftPanel"
            Grid.Column="0"
            BorderBrush="{DynamicResource AppThemePanelBorderBrush}"
            BorderThickness="1"
            Padding="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Size label -->
            <TextBlock x:Name="LeftSizeLabel"
                       Grid.Row="0"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       FontSize="11"
                       Foreground="{DynamicResource AppThemeSecondaryTextBrush}" />

            <!-- Hardware, Board and Category selectors -->
            <Grid Grid.Row="1"
                  Margin="0,8,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Hardware"
                           FontSize="11"
                           Foreground="{DynamicResource AppThemeSecondaryTextBrush}" />
                <ComboBox Grid.Row="1"
                          x:Name="HardwareComboBox"
                          HorizontalAlignment="Stretch"
                          Margin="0,4,0,0" />
                <TextBlock Grid.Row="2"
                           Text="Board"
                           FontSize="11"
                           Foreground="{DynamicResource AppThemeSecondaryTextBrush}"
                           Margin="0,8,0,0" />
                <ComboBox Grid.Row="3"
                          x:Name="BoardComboBox"
                          HorizontalAlignment="Stretch"
                          Margin="0,4,0,0" />
                <TextBlock Grid.Row="4"
                           Text="Category"
                           FontSize="11"
                           Foreground="{DynamicResource AppThemeSecondaryTextBrush}"
                           Margin="0,8,0,0" />
                <ListBox Grid.Row="5"
                         x:Name="CategoryFilterListBox"
                         SelectionMode="Multiple,Toggle"
                         Margin="0,4,0,0"
                         Background="{DynamicResource AppThemeListBackgroundBrush}"
                         BorderBrush="{DynamicResource AppThemeBorderBrush}"
                         BorderThickness="1"
                         CornerRadius="4"
                         ClipToBounds="True"
                         Padding="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.Styles>
                        <Style Selector="ListBox /template/ Border">
                            <Setter Property="CornerRadius" Value="3" />
                            <Setter Property="ClipToBounds" Value="True" />
                        </Style>
                        <Style Selector="ListBox /template/ ScrollViewer">
                            <Setter Property="CornerRadius" Value="3" />
                            <Setter Property="ClipToBounds" Value="True" />
                        </Style>
                        <Style Selector="ListBoxItem">
                            <Setter Property="Padding" Value="8,3" />
                            <Setter Property="MinHeight" Value="0" />
                            <Setter Property="FontSize" Value="11" />
                        </Style>
                        <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
                            <Setter Property="Background" Value="{DynamicResource AppThemeListSelectionHoverBrush}" />
                        </Style>
                        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                            <Setter Property="Background" Value="{DynamicResource AppThemeListSelectionBrush}" />
                        </Style>
                        <Style Selector="ListBoxItem:selected">
                            <Setter Property="Foreground" Value="{DynamicResource AppThemeListSelectedTextBrush}" />
                        </Style>
                        <Style Selector="ListBoxItem:selected:pointerover /template/ ContentPresenter">
                            <Setter Property="Background" Value="{DynamicResource AppThemeListSelectionHoverBrush}" />
                        </Style>
                        <Style Selector="ListBoxItem:selected:pointerover">
                            <Setter Property="Foreground" Value="{DynamicResource AppThemeListSelectedTextBrush}" />
                        </Style>
                    </ListBox.Styles>
                </ListBox>

                <TextBlock Grid.Row="6"
                           Text="Component"
                           FontSize="11"
                           Foreground="{DynamicResource AppThemeSecondaryTextBrush}"
                           Margin="0,8,0,0" />
                <ListBox Grid.Row="7"
                         x:Name="ComponentFilterListBox"
                         SelectionMode="Multiple,Toggle"
                         Margin="0,4,0,0"
                         Background="{DynamicResource AppThemeListBackgroundBrush}"
                         BorderBrush="{DynamicResource AppThemeBorderBrush}"
                         BorderThickness="1"
                         CornerRadius="4"
                         ClipToBounds="True"
                         Padding="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.Styles>
                        <Style Selector="ListBox /template/ Border">
                            <Setter Property="CornerRadius" Value="3" />
                            <Setter Property="ClipToBounds" Value="True" />
                        </Style>
                        <Style Selector="ListBox /template/ ScrollViewer">
                            <Setter Property="CornerRadius" Value="3" />
                            <Setter Property="ClipToBounds" Value="True" />
                        </Style>
                        <Style Selector="ListBoxItem">
                            <Setter Property="Padding" Value="8,3" />
                            <Setter Property="MinHeight" Value="0" />
                            <Setter Property="FontSize" Value="11" />
                        </Style>
                        <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
                            <Setter Property="Background" Value="{DynamicResource AppThemeListSelectionHoverBrush}" />
                        </Style>
                        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                            <Setter Property="Background" Value="{DynamicResource AppThemeListSelectionBrush}" />
                        </Style>
                        <Style Selector="ListBoxItem:selected">
                            <Setter Property="Foreground" Value="{DynamicResource AppThemeListSelectedTextBrush}" />
                        </Style>
                        <Style Selector="ListBoxItem:selected:pointerover /template/ ContentPresenter">
                            <Setter Property="Background" Value="{DynamicResource AppThemeListSelectionHoverBrush}" />
                        </Style>
                        <Style Selector="ListBoxItem:selected:pointerover">
                            <Setter Property="Foreground" Value="{DynamicResource AppThemeListSelectedTextBrush}" />
                        </Style>
                    </ListBox.Styles>
                </ListBox>
            </Grid>

            <!-- Action Controls -->
            <StackPanel Grid.Row="2" Margin="0,12,0,0" Spacing="4">
                <!-- Selection Actions -->
                <Grid ColumnDefinitions="*,4,*">
                    <Button Grid.Column="0" 
                            Content="Clear" 
                            HorizontalAlignment="Stretch" 
                            HorizontalContentAlignment="Center"
                            FontSize="12"
                            Padding="4"
                            Click="OnClearComponentsClick" />
                    <Button Grid.Column="2" 
                            Content="Mark all" 
                            HorizontalAlignment="Stretch" 
                            HorizontalContentAlignment="Center"
                            FontSize="12"
                            Padding="4"
                            Click="OnMarkAllComponentsClick" />
                </Grid>

                <!-- Video standard -->
                <Grid ColumnDefinitions="*,4,*">
                    <Button x:Name="PalRegionButton"
                            Classes="RegionToggle"
                            Grid.Column="0"
                            Content="PAL"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            FontSize="12"
                            Padding="4"
                            Click="OnPalRegionClick" />
                    <Button x:Name="NtscRegionButton"
                            Classes="RegionToggle"
                            Grid.Column="2"
                            Content="NTSC"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            FontSize="12"
                            Padding="4"
                            Click="OnNtscRegionClick" />
                </Grid>

                <!-- View options -->
                <Grid ColumnDefinitions="*,4,*">
                    <Button Grid.Column="0"
                            Content="Fullscreen"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            FontSize="12"
                            Padding="4" />

                    <CheckBox Grid.Column="2"
                              Content="Blink selected"
                              HorizontalAlignment="Left"
                              FontSize="12"
                              VerticalAlignment="Center" />
                </Grid>
            </StackPanel>

        </Grid>
    </Border>

    <!-- Left Splitter -->
    <GridSplitter x:Name="MainSplitter"
                  Grid.Column="1"
                  ResizeDirection="Columns"
                  HorizontalAlignment="Stretch"
                  Background="{DynamicResource AppThemeBorderBrush}" />

    <!-- Right Panel -->
    <Border x:Name="RightPanel"
            Grid.Column="2"
            BorderBrush="{DynamicResource AppThemeBackgroundBrush}"
            BorderThickness="1"
            Padding="0,0,0,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Update notification banner -->
            <Border x:Name="UpdateBanner"
                    Grid.Row="0"
                    IsVisible="False"
                    Background="{DynamicResource AppThemeBannerBackgroundBrush}"
                    CornerRadius="4"
                    Margin="0,8,0,4"
                    Padding="12,6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="UpdateBannerText"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource AppThemeBannerTextBrush}"
                               FontSize="12" />

                    <Button x:Name="UpdateBannerInstallButton"
                            Grid.Column="1"
                            Classes="BannerInstallButton"
                            Content="Install"
                            Margin="12,0,4,0"
                            Background="{DynamicResource AppThemeAccentBrush}"
                            Foreground="{DynamicResource AppThemeBannerTextBrush}"
                            FontSize="11"
                            Padding="10,3"
                            Click="OnInstallUpdateClick" />

                    <Button x:Name="UpdateBannerDismissButton"
                            Grid.Column="2"
                            Classes="BannerDismissButton"
                            Content="✕"
                            Background="Transparent"
                            Foreground="{DynamicResource AppThemeBannerTextBrush}"
                            FontSize="11"
                            Padding="6,3"
                            Click="OnUpdateBannerDismiss" />
                </Grid>
            </Border>

            <!-- Data sync notification banner -->
            <Border x:Name="SyncBanner"
                    Grid.Row="1"
                    IsVisible="False"
                    Background="{DynamicResource AppThemeBannerBackgroundBrush}"
                    CornerRadius="4"
                    Margin="0,0,0,4"
                    Padding="12,6"
                    Cursor="Hand"
                    PointerPressed="OnSyncBannerPointerPressed">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="SyncBannerText"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource AppThemeBannerTextBrush}"
                               FontSize="12" />

                    <Button x:Name="SyncBannerDismissButton"
                            Grid.Column="1"
                            Classes="BannerDismissButton"
                            Content="✕"
                            Background="Transparent"
                            Foreground="{DynamicResource AppThemeBannerTextBrush}"
                            FontSize="11"
                            Padding="6,3"
                            Click="OnSyncBannerDismiss" />
                </Grid>
            </Border>

            <TabControl Grid.Row="2">

                <TabItem Header="Schematics">
                    <Grid x:Name="SchematicsInnerGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MinWidth="80" />
                            <ColumnDefinition Width="4" />
                            <ColumnDefinition Width="*" MinWidth="100" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0"
                                x:Name="SchematicsContainer"
                                ClipToBounds="True"
                                PointerWheelChanged="OnSchematicsZoom"
                                PointerPressed="OnSchematicsPointerPressed"
                                PointerMoved="OnSchematicsPointerMoved"
                                PointerReleased="OnSchematicsPointerReleased"
                                Padding="0,0,0,0"
                                >
                            <Grid>
                                <Image x:Name="SchematicsImage"
                                       Stretch="Uniform"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       RenderTransformOrigin="0%,0%"
                                       RenderOptions.BitmapInterpolationMode="HighQuality">
                                    <Image.RenderTransform>
                                        <MatrixTransform />
                                    </Image.RenderTransform>
                                </Image>
                                <local:SchematicHighlightsOverlay x:Name="SchematicsHighlightsOverlay"
                                                                 IsHitTestVisible="False"
                                                                 RenderTransformOrigin="0%,0%">
                                    <local:SchematicHighlightsOverlay.RenderTransform>
                                        <MatrixTransform />
                                    </local:SchematicHighlightsOverlay.RenderTransform>
                                </local:SchematicHighlightsOverlay>
                            </Grid>
                        </Border>

                        <GridSplitter x:Name="SchematicsSplitter"
                                      Grid.Column="1"
                                      ResizeDirection="Columns"
                                      HorizontalAlignment="Stretch"
                                      Background="{DynamicResource AppThemeBorderBrush}" />

                        <ListBox x:Name="SchematicsThumbnailList"
                                 Grid.Column="2"
                                 Background="Transparent"
                                 SelectionMode="Single"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                            <ListBox.Styles>
                                <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
                                    <Setter Property="Background" Value="Transparent" />
                                </Style>
                                <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                                    <Setter Property="Background" Value="Transparent" />
                                </Style>

                                <Style Selector="ListBoxItem">
                                    <Setter Property="Padding"                     Value="0" />
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                </Style>

                                <Style Selector="ListBoxItem Border.ThumbnailBorder">
                                    <Setter Property="BorderBrush"     Value="{DynamicResource AppThemeThumbBorderSolidBrush}" />
                                    <Setter Property="BorderThickness" Value="1" />
                                </Style>

                                <Style Selector="ListBoxItem:selected Border.ThumbnailBorder">
                                    <Setter Property="BorderBrush"     Value="{DynamicResource AppThemeThumbSelectedBorderBrush}" />
                                    <Setter Property="BorderThickness" Value="3" />
                                </Style>

                            </ListBox.Styles>
                            <ListBox.ItemTemplate>
                                <DataTemplate x:DataType="local:SchematicThumbnail">
                                    <Border Classes="ThumbnailBorder"
                                            Margin="4,4,8,4"
                                            CornerRadius="0"
                                            HorizontalAlignment="Stretch"
                                            ClipToBounds="True">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            
                                            <Border Grid.Row="0"
                                                    Background="{DynamicResource AppThemeThumbLabelBackgroundBrush}"
                                                    BorderBrush="{DynamicResource AppThemeThumbBorderSolidBrush}"
                                                    BorderThickness="0,0,0,1">
                                                <TextBlock Text="{Binding Name}"
                                                           Foreground="{DynamicResource AppThemeTextBrush}"
                                                           HorizontalAlignment="Stretch"
                                                           TextAlignment="Left"
                                                           FontSize="11"
                                                           Padding="4,3" />
                                            </Border>
                                            
                                            <Image Grid.Row="1"
                                                   Source="{Binding ImageSource}"
                                                   Stretch="Uniform"
                                                   HorizontalAlignment="Stretch"
                                                   RenderOptions.BitmapInterpolationMode="HighQuality" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                    </Grid>
                </TabItem>

                <TabItem Header="Overview">
                    <StackPanel Spacing="16"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">

                        <TextBlock x:Name="RightSizeLabel"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Top"
                           FontSize="11"
                           Foreground="{DynamicResource AppThemeSecondaryTextBrush}" />

                        <Button x:Name="MyButton"
                                Content="Click me!"
                                Click="OnMyButtonClick"
                                Background="{DynamicResource AppThemeListSelectionBrush}" />
                        <TextBlock x:Name="StatusText"
                                   Text="Waiting for click..."
                                   Background="{DynamicResource AppThemeStatusBackgroundBrush}"
                                   Foreground="{DynamicResource AppThemeStatusTextBrush}"
                                   HorizontalAlignment="Center" />
                    </StackPanel>
                </TabItem>

                <TabItem Header="Resources">
                    <TextBlock Text="Details content goes here"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                </TabItem>

                <TabItem Header="Configuration">
                    <StackPanel Spacing="8"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Margin="16">

                        <TextBlock Text="Appearance"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,4" />

                        <ToggleSwitch x:Name="ThemeToggleSwitch"
                                      OffContent="Light Theme"
                                      OnContent="Dark Theme" />

                        <TextBlock Text="Application Launch"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Margin="0,16,0,4" />

                        <CheckBox x:Name="CheckVersionOnLaunchCheckBox"
                                  Content="Check for new version at application launch" />

                            <CheckBox x:Name="CheckDataOnLaunchCheckBox"
                                      Content="Check for new or updated data at application launch" />

                            <Button x:Name="OpenAppDataFolderButton"
                                    Content="Open data/log/settings folder"
                                    Margin="0,8,0,0"
                                    HorizontalAlignment="Left"
                                    Click="OnOpenAppDataFolderClick" />

                        </StackPanel>
                    </TabItem>

                    <TabItem Header="Feedback">
                        <TextBlock Text="Details content goes here"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </TabItem>

                    <TabItem Header="Help">
                        <TextBlock Text="Details content goes here"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </TabItem>

                    <TabItem Header="About">
                        <Grid Margin="16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0"
                                        Orientation="Horizontal"
                                        Spacing="16"
                                        VerticalAlignment="Center">
                            
                                <Image Source="avares://Retro-Repair-Toolbox/Assets/RRT_icon.png"
                                       Width="96"
                                       Height="96" />
                            
                                <StackPanel VerticalAlignment="Center"
                                            Spacing="4">
                                    <TextBlock x:Name="AboutAssemblyTitleText"
                                               FontSize="24"
                                               FontWeight="SemiBold" />
                                           
                                    <StackPanel Orientation="Horizontal"
                                                Spacing="0">
                                        <TextBlock Text="Version "
                                                   FontSize="14" />
                                        <TextBlock x:Name="AppVersionText"
                                                   FontSize="14"
                                                   FontWeight="Bold" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Row="1"
                                        Orientation="Horizontal"
                                        Margin="0,32,0,0"
                                        Spacing="6">
                                <TextBlock Text="GitHub project page:"
                                           VerticalAlignment="Center" />
                                <Button Content="https://github.com/HovKlan-DH/Retro-Repair-Toolbox"
                                        Padding="0"
                                        BorderThickness="0"
                                        Background="Transparent"
                                        Foreground="{DynamicResource AppThemeAccentBrush}"
                                        Click="OnGitHubProjectPageClick" />
                            </StackPanel>

                            <StackPanel Grid.Row="2"
                                        Orientation="Horizontal"
                                        Margin="0,6,0,26"
                                        Spacing="6">
                                <TextBlock Text="Helper page:"
                                           VerticalAlignment="Center" />
                                <Button Content="https://retro-repair-toolbox.dk"
                                        Padding="0"
                                        BorderThickness="0"
                                        Background="Transparent"
                                        Foreground="{DynamicResource AppThemeAccentBrush}"
                                        Click="OnHelperPageClick" />
                            </StackPanel>

                            <Grid Grid.Row="3"
                                  VerticalAlignment="Stretch"
                                  HorizontalAlignment="Stretch"
                                  RowDefinitions="Auto,*">
                                <TextBlock Grid.Row="0"
                                           Text="Changelog:"
                                           Margin="0,0,0,6" />
                                <TextBox x:Name="ChangelogTextBox"
                                         Grid.Row="1"
                                         IsReadOnly="True"
                                         AcceptsReturn="True"
                                         TextWrapping="NoWrap"
                                         FontFamily="Consolas, Courier New, monospace"
                                         HorizontalAlignment="Stretch"
                                         VerticalAlignment="Stretch"
                                         MinHeight="120"
                                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                                         ScrollViewer.HorizontalScrollBarVisibility="Auto" />
                            </Grid>
                        </Grid>
                    </TabItem>

                </TabControl>

            </Grid>
        </Border>

    </Grid>

</Window>